<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/myActionBarStyle</item>
    </style>

    <style name="myActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">@color/blue_light</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
    </style>

    <style name="AcBar_titleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="RatingbarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_drawable_selector</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:rating">3.0</item>
        <item name="android:minHeight">@dimen/rating_height</item>
        <item name="android:maxHeight">@dimen/rating_height</item>
    </style>

    <style name="RatingbarShowStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_drawable_selector</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">true</item>
        <item name="android:minHeight">@dimen/rating_height</item>
        <item name="android:maxHeight">@dimen/rating_height</item>
    </style>

    <style name="RatingbarTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ChooseTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:padding">@dimen/default_padding_8</item>
        <item name="android:background">@color/white</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/grey_light</item>
    </style>

</resources>